# For the benefit of emacs users: -*- shell-script -*-
# Kill
"god"
  Shift+Mod4 + x

# screenshot
"flameshot gui"
  Shift+Mod4 + s

# wallpaper
"setwall"
  Mod4 + w

# Adjusting color temp of screen using redshift
"redshift"
  Mod5 + bracketleft

"pkill -USR1 redshift"
  Mod5 + bracketright

# Spawning
"dmenu_run"
  Mod4 + semicolon

"st"
  Shift+Mod4 + Return

# slock
"slock"
  Mod5 + Return

# Media Controls
"playerctl play-pause"
  Mod5 + p

